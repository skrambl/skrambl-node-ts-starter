{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
      },
    },
    "include": ["**/*.ts"],
    "exclude": ["dist", "node_modules"]
  }